{
  "name": "Professional Blue Template",
  "description": "A clean and professional template with blue accents",
  "type": "json",
  "version": "1.0",
  "author": "NextBloom",
  "styles": {
    "primaryColor": "#2c3e50",
    "accentColor": "#3498db",
    "backgroundColor": "#ffffff",
    "textColor": "#333333",
    "fontFamily": "Arial, sans-serif"
  },
  "layout": {
    "header": {
      "style": "centered",
      "backgroundColor": "transparent",
      "borderBottom": "3px solid {{accentColor}}"
    },
    "sections": [
      {
        "id": "personal",
        "title": "Personal Information",
        "fields": ["firstName", "lastName", "email", "phone", "address"]
      },
      {
        "id": "summary",
        "title": "Professional Summary",
        "fields": ["summary"]
      },
      {
        "id": "experience",
        "title": "Work Experience",
        "fields": ["experience"]
      },
      {
        "id": "education",
        "title": "Education",
        "fields": ["education"]
      },
      {
        "id": "skills",
        "title": "Skills",
        "fields": ["skills"],
        "style": "tags"
      },
      {
        "id": "projects",
        "title": "Projects",
        "fields": ["projects"]
      }
    ]
  },
  "html": "<!DOCTYPE html><html><head><style>body{font-family:Arial,sans-serif;margin:0;padding:20px;background:#f5f5f5}.resume{max-width:800px;margin:0 auto;background:white;padding:40px;box-shadow:0 0 20px rgba(0,0,0,0.1)}.header{text-align:center;border-bottom:3px solid #2c3e50;padding-bottom:20px;margin-bottom:30px}.name{font-size:2.5em;font-weight:bold;color:#2c3e50;margin-bottom:10px}.contact{color:#7f8c8d;font-size:1.1em}.section{margin-bottom:30px}.section-title{font-size:1.5em;font-weight:bold;color:#2c3e50;border-bottom:2px solid #3498db;padding-bottom:5px;margin-bottom:15px}.skill{background:#3498db;color:white;padding:5px 15px;border-radius:20px;font-size:0.9em;margin:2px}</style></head><body><div class='resume'><div class='header'><div class='name'>{{firstName}} {{lastName}}</div><div class='contact'>{{email}} | {{phone}} | {{address}}</div></div><div class='section'><div class='section-title'>Professional Summary</div><p>{{summary}}</p></div><div class='section'><div class='section-title'>Experience</div>{{experience}}</div><div class='section'><div class='section-title'>Education</div>{{education}}</div><div class='section'><div class='section-title'>Skills</div>{{skills}}</div><div class='section'><div class='section-title'>Projects</div>{{projects}}</div></div></body></html>"
}